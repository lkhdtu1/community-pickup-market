# Production Environment Configuration for Community Pickup Market
# This file contains production-ready environment variable configurations

# Frontend Configuration (Production)
VITE_API_URL=https://api.community-pickup-market.com
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_your_production_stripe_publishable_key

# Backend Database Configuration (Production)
DB_HOST=your-production-db-host.com
DB_PORT=5432
DB_USER=community_market_user
DB_PASSWORD=your_strong_production_password
DB_NAME=community_pickup_market_prod
DB_SSL=true

# JWT Configuration (Production)
JWT_SECRET=your_super_secret_production_jwt_key_minimum_64_characters_very_secure
JWT_EXPIRES_IN=24h

# Stripe Configuration (Production)
STRIPE_SECRET_KEY=sk_live_your_production_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_production_webhook_secret

# Email Configuration (Production SMTP)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=apikey
SMTP_PASS=your_sendgrid_api_key
SMTP_FROM="Community Pickup Market <orders@community-pickup-market.com>"

# Environment
NODE_ENV=production
PORT=3001

# Redis Configuration (Production - for caching)
REDIS_URL=redis://your-redis-host:6379

# File Upload Configuration
MAX_FILE_SIZE=10mb
UPLOAD_DIR=/var/uploads

# Security Configuration (Production)
BCRYPT_ROUNDS=15
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# Logging Configuration (Production)
LOG_LEVEL=warn
LOG_FILE=/var/log/community-pickup-market/app.log

# Additional Production Settings
ENABLE_CORS=true
CORS_ORIGIN=https://community-pickup-market.com,https://www.community-pickup-market.com
TRUST_PROXY=true
SESSION_SECURE=true
COOKIE_SECURE=true

# Monitoring and Health Checks
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
SENTRY_DSN=your_sentry_dsn_for_error_tracking

# CDN and Asset Configuration
CDN_URL=https://cdn.community-pickup-market.com
STATIC_FILES_URL=https://static.community-pickup-market.com
